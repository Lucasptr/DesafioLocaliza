@model WebApp.MVC.Models.DivisoresNumero
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-12">
            <section>
                <form asp-action="EncontrarDivisores" asp-controller="Home" method="GET" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#divListarDivisores">
                    <div class="form-group">
                        <span>Name:</span>
                        <input type="number" name="numeroBase" min="1" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="encontrarDivisores">Encontrar Divisores</button>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <div class="row">
        <div id="divListarDivisores" class="col-md-12">
            @Html.Partial("_ListarDivisores", Model)
        </div>
    </div>

</div>